{
  "name": "use-mcp",
  "repository": "https://github.com/modelcontextprotocol/use-mcp",
  "version": "0.0.22",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "workspaces": [
    "examples/*",
    "examples/servers/*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "require": "./dist/react/index.js",
      "import": "./dist/react/index.js"
    },
    "./auth/keycloak": {
      "types": "./dist/auth/keycloak.d.ts",
      "import": "./dist/auth/keycloak.js"
    }
  },
  "scripts": {
    "install:all": "concurrently 'npm install' 'cd examples/chat-ui && npm install' 'cd examples/inspector && npm install' 'cd examples/servers/hono-mcp && npm install' 'cd examples/servers/cf-agents && npm install'",
    "dev": "concurrently 'npm run build:watch' 'cd examples/chat-ui && npm run dev' 'cd examples/inspector && npm run dev' 'sleep 1 && cd examples/servers/hono-mcp && npm run dev' 'sleep 2 && cd examples/servers/cf-agents && npm run dev'",
    "dev:ui": "concurrently 'npm run build:watch' 'cd examples/chat-ui && npm run dev' 'cd examples/inspector && npm run dev'",
    "deploy:all": "concurrently 'npm run build:site && npm run deploy:site' 'cd examples/chat-ui && npm run deploy' 'cd examples/inspector && npm run deploy'",
    "build:watch": "tsup --watch",
    "build": "tsup",
    "check": "prettier --check . && tsc",
    "prettier:fix": "prettier --write .",
    "fix:oranda": "sed -i 's/```tsx/```ts/g' README.md",
    "build:site": "npx @axodotdev/oranda build",
    "deploy:site": "npx wrangler deploy",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.3",
    "keycloak-js": "^26.2.3",
    "strict-url-sanitise": "^0.0.1",
    "use-mcp": "^0.0.21"
  },
  "devDependencies": {
    "@axodotdev/oranda": "^0.6.5",
    "@types/react": "^19.0.12",
    "concurrently": "^9.2.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "wrangler": "^4.20.2"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/react/index.ts",
      "src/auth/keycloak.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "clean": true,
    "outDir": "dist",
    "external": [
      "react",
      "@modelcontextprotocol/sdk"
    ]
  }
}